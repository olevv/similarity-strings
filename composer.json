{
  "name": "olevv/similarity-strings",
  "license": "MIT",
  "type": "library",
  "description": "Appraiser similarity strings",
  "authors": [
    {
      "name": "Vitaly Oleynik",
      "email": "oleynikvit@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1"
  },
  "require-dev": {
    "phploc/phploc": "~4",
    "phpmd/phpmd": "~2",
    "jakub-onderka/php-parallel-lint": "~0",
    "phpstan/phpstan": "~0",
    "povils/phpmnd": "~1",
    "block8/php-docblock-checker": "~1",
    "squizlabs/php_codesniffer": "~3"
  },
  "autoload": {
    "psr-4": {
      "Olevv\\SimilarityStrings\\": [
        "src/"
      ]
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "scripts": {
    "post-install-cmd": [
      "bash .githooks/setup.sh"
    ],
    "post-update-cmd": [
      "bash .githooks/setup.sh"
    ]
  }
}
